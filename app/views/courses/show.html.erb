<h2>
   <%= @course.name %>
</h2>


<h4>Disciplinas: <%= Room.where("course_id = ?", @course.id).count %></h4>
<section class="box">
   <dl>
      <% Room.where("course_id = ?", @course.id).each do |room| %>

         <dd><%= room.discipline.name %> ministrado(a) por <%= room.teacher.name %></dd>

         <dd>
            <small>
               <%=link_to "Remover", room ,method: :delete,
               data: {confirm: "confirmar remoção ?"} %>   
            </small>
         </dd>

      <% end %>
   </dl>
</section>


<h4>Alunos: <%= @course.students_count %></h4>
<section class="box">
   <dl>
      <% @course.students.each do |student| %>
         <dd>
            <%= student.name %>
         </dd>

         <dd>
            <small>
               <%= link_to "Remover", reset_student_path(student), method: :put,
               data: {confirma: "confirmar remoção ?"} %>
            </small>
         </dd>

      <% end %>
   </dl>
</section>
