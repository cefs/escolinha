<h2>Professores Cadastrados</h2>

<p>
   <%= link_to t("nav.link.teachers.register"), new_teacher_path %>
</p>

<table class="table">
   <tr>
      <th>Nome</th>
      <th></th>
      <th></th>
   </tr>

   <% @teachers.each do |teacher| %>
      <tr>
         <td><%= teacher.name %></td>
         <td><%= link_to(t("helpers.link.teacher.show"), teacher_path(teacher))%></td>
         <td><%= link_to(t("helpers.link.teacher.edit"), edit_teacher_path(teacher))%></td>
      </tr>
   <% end %>
</table>

<p>
   <%= paginate @teachers, :size => 4 %>
</p>