<h3>Montar Sala</h3>

<%= form_for @room do |f| %>     

   <%= render "shared/error_messages", :record => @room %>

   <p>
      <%= f.label :course_id %>
      <%= f.collection_select :course_id, courses, :id, :name, :include_blank => true  %>
   </p>

   <p>
      <%= f.label :teacher_id %>
      <%= f.collection_select :teacher_id, teachers, :id, :name, :include_blank => true  %>
   </p>

   <p>
      <%= f.label :discipline_id %>
      <%= f.collection_select :discipline_id, disciplines, :id, :name, :include_blank => true  %>      
   </p>

   <p>
      <%= f.submit %>
   </p>

<% end %>